{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./app/*"],
      "@/utils/*": ["./app/utils/*"],
      "@/api/*": ["./app/api/*"],
      "@/lib/*": ["./app/lib/*"],
      "@/hooks/*": ["./app/hooks/*"],
      "@/components/*": ["./app/components/*"],
      "@/models/*": ["./app/models/*"],
      "@/data/*": ["./app/data/*"]
    },
    "jsx": "preserve",
    "moduleResolution": "node"
  },
  "include": ["app/**/*"],
  "exclude": ["node_modules", ".next"]
}